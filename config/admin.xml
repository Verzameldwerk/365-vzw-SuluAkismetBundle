<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults>
            <tag name="sulu.admin"/>
            <tag name="sulu.context" context="admin"/>
        </defaults>

        <service id="Verzameldwerk\Bundle\AkismetBundle\Akismet\Infrastructure\Sulu\Admin\AkismetConfigurationAdmin">
            <argument type="service" id="sulu_admin.view_builder_factory"/>
            <argument type="service" id="sulu_security.security_checker"/>
        </service>

        <service id="Verzameldwerk\Bundle\AkismetBundle\Akismet\Infrastructure\Sulu\Admin\AkismetRequestAdmin">
            <argument type="service" id="sulu_admin.view_builder_factory"/>
            <argument type="service" id="sulu_security.security_checker"/>
        </service>
    </services>
</container>
